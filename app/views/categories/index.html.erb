<p id="notice"><%= notice %></p>
<center>
<body style="border:double 300px #FFCC99;">

<h1>カテゴリー一覧</h1>

<table>
  <thead>
    <tr>
      <th>カテゴリー名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody >
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.categoryname %></td>
        <td><%= link_to '詳細', category %></td>
        <td><%= link_to '更新', edit_category_path(category) %></td>
        <td><%= link_to '削除', category, method: :delete, data: { confirm: '本当に削除してよろしいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'カテゴリー登録', new_category_path %>
</center>
